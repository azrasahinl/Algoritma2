
package algoritma2;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;
//kpog dosya içinde kaç tane 100den büyük sayı olduğunu bulup
//geri döndğren metodu calısır şekilde veriniz.
//dosyanın içinde sayılar bulunmaktadır
public class sınavhazırlıkornek1 {
    public static int buldosya(File fx) throws FileNotFoundException{
   Scanner fk=new Scanner(fx);//okuma
   int x; int sayac=0;
   while(fk.hasNext()){
       x=fk.nextInt();
       if(x>100) sayac++;} 
       fk.close();
      return sayac;         

   }

    public static void main(String[] args) throws FileNotFoundException {
    File fx=new File("ali.txt");//ali.txt var çalıştığım dizide
   //int x=buldosya(fx);
    //    System.out.println(fx);
        System.out.println(buldosya(fx));
    }
  
}
