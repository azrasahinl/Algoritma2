    private void jTextField1KeyTyped(java.awt.event.KeyEvent evt) {                                     
   String s=jTextField1.getText();
   int sayac=0;
        for (int i = 0; i <s.length(); i++) {
            if(s.charAt(i)>='A' && s.charAt(i)<='Z')
                sayac++;
            
        }
        jLabel2.setText("Büyük Harf Sayısı:"+sayac);
    }                                    

