    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
     int sayi=Integer.parseInt(jTextField1.getText());
     int fak=1;
        for (int i = 1; i <=sayi; i++) {
          fak=fak*i;  
        }
        jLabel2.setText("Sonuç:"+fak);
    }                                        

