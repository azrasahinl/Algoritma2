    private void jTextField1ActionPerformed(java.awt.event.ActionEvent evt) {                                            
     String SonucText=" ";
     String SonucInt=" ";
     String icerik=jTextField1.getText();
        for (int i = 0; i <icerik.length(); i++) {
            if(Character.isDigit(icerik.charAt(i)))
                SonucInt=SonucInt+" "+icerik.charAt(i);
            else
                SonucText=SonucText+icerik.charAt(i);
        }
        jLabel1.setText(SonucInt);
        jLabel2.setText(SonucText);
    }                                           

